datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts Account[]
  sessions Session[]

  // ✅ Favoritos/guardados
  promptSaves PromptSave[]

  packs UserPack[]

  // ✅ Accesos directos a prompts (entitlements)
  promptAccesses UserPromptAccess[]

  // ✅ Historial compras de packs
  packPurchases PackPurchase[]

  // ✅ Runs de Prompt Optimizer
  promptOptimizerRuns PromptOptimizerRun[]

  subscription          UserSubscription?
  subscriptionPurchases SubscriptionPurchase[]

  // ✅ NUEVO: Audit / usage events
  auditEvents AuditEvent[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum PromptType {
  texto
  imagen
  video
}

/**
 * Herramientas/Modelos de IA configurables (ChatGPT, Claude, Midjourney, etc.)
 * - slug: para URLs y filtros (ej. "chatgpt", "midjourney")
 */
model AiTool {
  id       String  @id @default(cuid())
  slug     String  @unique
  name     String
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  prompts PromptAiTool[]
}

model PromptAiTool {
  promptId String
  aiToolId String

  prompt Prompt @relation(fields: [promptId], references: [id], onDelete: Cascade)
  aiTool AiTool @relation(fields: [aiToolId], references: [id], onDelete: Cascade)

  @@id([promptId, aiToolId])
  @@index([aiToolId])
  @@index([promptId])
}

model Prompt {
  id          String     @id @default(cuid())
  title       String     @unique
  description String
  type        PromptType

  isFree Boolean @default(false)

  contentPreview String
  contentFull    String
  isPublished    Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  aiTools PromptAiTool[]

  // ✅ Favoritos/guardados
  saves PromptSave[]

  packs PackPrompt[]

  // ✅ Accesos directos por usuario
  accessUsers UserPromptAccess[]
}

/**
 * Guardados (favoritos/bookmarks) por usuario
 */
model PromptSave {
  id        String   @id @default(cuid())
  userId    String
  promptId  String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  prompt Prompt @relation(fields: [promptId], references: [id], onDelete: Cascade)

  @@unique([userId, promptId])
  @@index([userId])
  @@index([promptId])
}

model Pack {
  id          String  @id @default(cuid())
  slug        String  @unique
  title       String
  description String
  isFree      Boolean @default(false)
  priceMx     Int     @default(0)
  isPublished Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  prompts PackPrompt[]
  users   UserPack[]

  // ✅ Historial compras
  purchases PackPurchase[]
}

model PackPrompt {
  packId   String
  promptId String

  pack   Pack   @relation(fields: [packId], references: [id], onDelete: Cascade)
  prompt Prompt @relation(fields: [promptId], references: [id], onDelete: Cascade)

  @@id([packId, promptId])
  @@index([promptId])
  @@index([packId])
}

model UserPack {
  userId String
  packId String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  pack Pack @relation(fields: [packId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@id([userId, packId])
  @@index([packId])
  @@index([userId])
}

model PromptRequest {
  id          String    @id @default(cuid())
  userEmail   String
  title       String
  description String
  aiTool      String?
  createdAt   DateTime  @default(now())
  resolvedAt  DateTime?
}

enum AccessSource {
  manual
  promo
  payment
  support
  temp
}

model UserPromptAccess {
  userId   String
  promptId String

  source    AccessSource @default(manual)
  expiresAt DateTime? // null = permanente

  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  prompt Prompt @relation(fields: [promptId], references: [id], onDelete: Cascade)

  @@id([userId, promptId])
  @@index([userId])
  @@index([promptId])
  @@index([expiresAt])
}

enum PurchaseStatus {
  pending
  approved
  rejected
}

model PackPurchase {
  id       String         @id @default(cuid())
  userId   String
  packId   String
  amountMx Int
  status   PurchaseStatus @default(pending)

  // conciliación manual
  mpPaymentId String?
  note        String?
  approvedAt  DateTime?
  rejectedAt  DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  pack Pack @relation(fields: [packId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([packId])
  @@index([status])
  @@index([createdAt])
}

enum ToolTargetAI {
  chatgpt
  claude
  gemini
  deepseek
}

/**
 * ✅ NUEVO: plan para runs
 */
enum OptimizerPlan {
  free
  pro
}

/**
 * ✅ NUEVO: motor para runs
 */
enum OptimizerEngine {
  mock
  openai
}

model PromptOptimizerRun {
  id       String       @id @default(cuid())
  userId   String
  targetAI ToolTargetAI @default(chatgpt)

  // ✅ Para evitar deuda técnica (auditable)
  plan   OptimizerPlan   @default(free)
  engine OptimizerEngine @default(mock)
  model  String?

  input  String
  output String

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@index([plan])
  @@index([engine])
}

enum SubscriptionStatus {
  pending
  approved
  rejected
  cancelled
}

model UserSubscription {
  id String @id @default(cuid())

  userId String             @unique
  status SubscriptionStatus @default(pending)

  // vigencia (si decides mensual/anual)
  startsAt DateTime  @default(now())
  endsAt   DateTime? // null = “indefinida” (MVP) o hasta que canceles

  // útil para auditoría/soporte
  note String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([endsAt])
}

model SubscriptionPurchase {
  id String @id @default(cuid())

  userId   String
  amountMx Int
  status   SubscriptionStatus @default(pending)

  // conciliación manual (MercadoPago)
  mpPaymentId String?
  note        String?

  approvedAt DateTime?
  rejectedAt DateTime?

  // snapshot para auditoría
  startsAt DateTime? // si el admin aprueba puede setear inicio/fin
  endsAt   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

/**
 * ✅ NUEVO: Audit / usage events (login, copy prompt, tool runs, etc.)
 * - userId opcional por si algún día quieres eventos anónimos
 * - emailSnapshot útil para debug/auditoría (no dependes del userId)
 */
model AuditEvent {
  id            String   @id @default(cuid())
  userId        String?
  emailSnapshot String?
  event         String
  entityType    String?
  entityId      String?
  meta          Json?
  createdAt     DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([event, createdAt])
  @@index([userId, createdAt])
  @@index([emailSnapshot, createdAt])
}
